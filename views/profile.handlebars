<div class="columns">
  <div class="column">
    <h2 class="title is-2">My Style</h2>
  </div>
  <div class="column">
    {{log this}}
    <h3 class="title is-3">Hi, {{user.first_name}}{{user.last_name}}!</h3>
  </div>
</div>

<div class="columns">
  <div class="column">
    <h3 class="title is-3">Create a New Post:</h3>

    <form class="box" id="create-post-form">
      <div class="field">
        <label class="label">Title:</label>
        <div class="control">
          <input class="input" type="text" id="post-title"/>
        </div>
      </div>
      <div class="field">
        <label class="label">Description:</label>
        <div class="control">
          <input class="input" type="text" id="post-description"/>
        </div>
      </div>
      {{!-- <div class="field">
        <label class="label">Picture:</label>
        <div class="control">
          <input class="input" type="text" id="post-picture"/>
        </div>
      </div> --}}
      <div class="field has-addons">
        <label class="label">Picture:</label>
        <div class="control">
          <input class="input" type="text" placeholder="image url">
        </div>
        <div class="control">
          <a class="button is-link is-light">
            Upload
          </a>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-dark" type="submit">Create</button>
        </div>
      </div>
    </form>
    </div>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>